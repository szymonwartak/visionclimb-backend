init
----
drop column family RouteCounters;
drop column family Areas;
drop column family Routes;
drop column family Images;
CREATE COLUMN FAMILY RouteCounters WITH default_validation_class=CounterColumnType and comparator = UTF8Type AND key_validation_class=UTF8Type;
create column family Routes;
create column family Areas;
create column family Images;
assume Routes keys as utf8;
assume Routes comparator as utf8;
assume Routes validator as utf8;
assume Images keys as utf8;
assume Images comparator as utf8;
assume Images validator as utf8;
assume Areas keys as utf8;
assume Areas comparator as utf8;
assume Areas validator as utf8;
incr RouteCounters['routes']['count'];
decr RouteCounters['routes']['count'];
incr RouteCounters['images']['count'];
decr RouteCounters['images']['count'];
incr RouteCounters['1']['count'];
decr RouteCounters['1']['count'];
incr RouteCounters['2']['count'];
decr RouteCounters['2']['count'];


// route counters (CF; all route counter - for id; area route counter - for list;)
drop column family RouteCounters;
CREATE COLUMN FAMILY RouteCounters WITH default_validation_class=CounterColumnType and comparator = UTF8Type AND key_validation_class=UTF8Type;
incr RouteCounters['routes']['count'];
incr RouteCounters[{areaId}]['count'];




